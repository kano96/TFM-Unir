{
  "uid": "aiops-service",
  "title": "AIOps â€” Per Service",
  "tags": [
    "aiops",
    "phase7"
  ],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "label": "Service",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "refresh": 2,
        "includeAll": false,
        "multi": false,
        "query": {
          "query": "label_values(app_requests_total, service)",
          "refId": "A"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Current RPS",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 5
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(app_requests_total{service=\"$service\",endpoint=\"/simulate\"}[1m]))"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Current EPS",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 5
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(app_errors_total{service=\"$service\",endpoint=\"/simulate\"}[1m]))"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Current Error Ratio",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 6,
        "h": 5
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(sum(rate(app_errors_total{service=\"$service\",endpoint=\"/simulate\"}[1m]))) / clamp_min((sum(rate(app_requests_total{service=\"$service\",endpoint=\"/simulate\"}[1m]))), 0.000001)"
        }
      ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Current p95 Latency (s)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "x": 18,
        "y": 0,
        "w": 6,
        "h": 5
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by(le) (rate(app_request_latency_seconds_bucket{service=\"$service\",endpoint=\"/simulate\"}[1m])))"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "RPS / EPS",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "x": 0,
        "y": 5,
        "w": 24,
        "h": 9
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(app_requests_total{service=\"$service\",endpoint=\"/simulate\"}[1m]))",
          "legendFormat": "rps"
        },
        {
          "refId": "B",
          "expr": "sum(rate(app_errors_total{service=\"$service\",endpoint=\"/simulate\"}[1m]))",
          "legendFormat": "eps"
        }
      ]
    },
    {
      "id": 6,
      "type": "logs",
      "title": "Logs (service container)",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "gridPos": {
        "x": 0,
        "y": 14,
        "w": 24,
        "h": 10
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{container=~\".*simulator-$service.*\"}"
        }
      ]
    }
  ]
}